{
  "root": true,
  "extends": [
    "@react-native-community",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "jsx-quotes": ["error", "prefer-double"],
    "curly": ["error", "all"]
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "rules": {
        "jsx-quotes": "off"
      }
    }
  ]
}
